local R = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local p, fs, fly, nc, esp, ij, ec = game.Players.LocalPlayer, 50, false, false, false, false, Color3.new(1,0,0)

local Window = R:CreateWindow({
   Name = "Voidware | ILhub Ultimate V13.1",
   LoadingTitle = "By Liran & Ilay IL",
   LoadingSubtitle = "Stable & Fixed Version",
   ConfigurationSaving = { Enabled = false }
})

local t = Window:CreateTab("Teleport", 4483362458)
local m = Window:CreateTab("Movement", 4483345998)
local v = Window:CreateTab("Visuals", 4483362458)
local x = Window:CreateTab("Exploits", 4483362458)

-- Teleport
t:CreateSection("Teleport to Players")
local function updateTP()
    for _, o in pairs(game.Players:GetPlayers()) do
        if o ~= p then
            t:CreateButton({
                Name = o.DisplayName .. " (@" .. o.Name .. ")", 
                Callback = function() 
                    if o.Character and o.Character:FindFirstChild("HumanoidRootPart") then 
                        p.Character.HumanoidRootPart.CFrame = o.Character.HumanoidRootPart.CFrame 
                    end 
                end
            })
        end
    end
end
updateTP()

-- Movement
m:CreateSection("Movement Settings")
m:CreateToggle({Name = "Infinite Jump", Callback = function(s) ij = s end})

game:GetService("UserInputService").JumpRequest:Connect(function() 
    if ij and p.Character and p.Character:FindFirstChildOfClass("Humanoid") then 
        p.Character:FindFirstChildOfClass("Humanoid"):ChangeState("Jumping") 
    end 
end)

m:CreateSlider({Name = "Walk Speed", Range = {16, 1000}, CurrentValue = 16, Callback = function(val) if p.Character then p.Character.Humanoid.WalkSpeed = val end end})
m:CreateSlider({Name = "Jump Power", Range = {0, 1000}, CurrentValue = 50, Callback = function(val) if p.Character then p.Character.Humanoid.UseJumpPower = true p.Character.Humanoid.JumpPower = val end end})

m:CreateSection("Flight")
m:CreateToggle({Name = "Fly (Space=Up / Q=Down)", Callback = function(s) 
    fly = s
    if fly and p.Character then
        local hrp = p.Character.HumanoidRootPart
        local bv = Instance.new("BodyVelocity", hrp)
        bv.MaxForce = Vector3.new(1e9, 1e9, 1e9)
        task.spawn(function()
            while fly do
                local cam, uis = workspace.CurrentCamera.CFrame, game:GetService("UserInputService")
                local d = Vector3.new(0,0,0)
                if uis:IsKeyDown(Enum.KeyCode.W) then d = d + cam.LookVector * fs end
                if uis:IsKeyDown(Enum.KeyCode.S) then d = d + cam.LookVector * -fs end
                if uis:IsKeyDown(Enum.KeyCode.A) then d = d + cam.RightVector * -fs end
                if uis:IsKeyDown(Enum.KeyCode.D) then d = d + cam.RightVector * fs end
                if uis:IsKeyDown(Enum.KeyCode.Space) then d = d + Vector3.new(0, fs, 0) end
                if uis:IsKeyDown(Enum.KeyCode.Q) then d = d + Vector3.new(0, -fs, 0) end
                bv.Velocity = d
                task.wait()
            end
            bv:Destroy()
        end)
    end
end})
m:CreateSlider({Name = "Fly Speed", Range = {0, 1000}, CurrentValue = 50, Callback = function(val) fs = val end})

-- Visuals
v:CreateSection("ESP Settings")
v:CreateToggle({Name = "Enable ESP", Callback = function(s) 
    esp = s 
    for _, o in pairs(game.Players:GetPlayers()) do
        if o ~= p and o.Character then
            local h = o.Character:FindFirstChild("Highlight") or Instance.new("Highlight", o.Character)
            h.Enabled = esp 
            h.FillColor = ec
        end
    end
end})

v:CreateColorPicker({Name = "ESP Color", Color = ec, Callback = function(c) 
    ec = c 
    for _, o in pairs(game.Players:GetPlayers()) do
        if o.Character and o.Character:FindFirstChild("Highlight") then 
            o.Character.Highlight.FillColor = c 
        end
    end
end})

-- Exploits
x:CreateSection("Exploits")
x:CreateToggle({Name = "Noclip", Callback = function(s) 
    nc = s 
    game:GetService("RunService").Stepped:Connect(function()
        if nc and p.Character then
            for _, b in pairs(p.Character:GetDescendants()) do 
                if b:IsA("BasePart") then b.CanCollide = false end 
            end
        end
    end)
end})

R:Notify({Title = "Fix Applied", Content = "Infinite reload loop removed. V13.1 Ready.", Duration = 5})
